<%= render :partial => "partials/title_with_search", locals: {title: item_type} %>
<% unless items.nil? || items.empty? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="300">Name</th>
        <th width="100">Price</th>
        <th width="100">Price</th>
        <th width="100">Units</th>
        <% if controller.controller_name == 'orders' %>
          <th width="100">&nbsp;</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% items.each do |item| %>
        <tr>
          <td><%= link_to item.name, item_path(item) %></td>
          <td><%= number_to_currency item.current_price %></td>
          <td><%= item.units_per_item %> <%= item_type == 'bread' ? 'loaf' : item_type %></td>

            <td>
              <%= link_to(add_to_cart_path(item.id), class: 'button tiny radius', method: "get") do %>
                &nbsp;Add to Cart&nbsp;
              <% end %>
            </td>

        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>