<% unless @similar_items.empty? %>
  <div class="panel clearfix">
    <h3>Similar Items</h3>
    <table>
      <thead>
        <tr>
          <th width="120">Name</th>
          <th width="100">Price</th>
        </tr>
      </thead>
      <tbody>
      <% @similar_items.each do |pricev| %>
        <tr>
          <td><%= link_to pricev.name, item_path(pricev) %></td>
          <td><%= pricev.current_price %></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>
